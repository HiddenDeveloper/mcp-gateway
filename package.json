{
  "name": "mcp-gateway",
  "version": "0.1.0",
  "description": "A Bun-based gateway that exposes services via MCP protocol for discovery and routes HTTP requests to user-defined functions",
  "type": "module",
  "main": "src/gateway.ts",
  "bin": {
    "mcp-gateway": "src/gateway.ts"
  },
  "scripts": {
    "start": "bun run src/gateway.ts",
    "dev": "bun --watch run src/gateway.ts",
    "test": "bun test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gateway",
    "api",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "src",
    "README.md"
  ],
  "dependencies": {
    "ws": "^8.18.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
