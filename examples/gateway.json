{
  "gateway": {
    "info": {
      "title": "my-gateway",
      "version": "1.0.0",
      "description": "Example MCP Gateway configuration"
    },
    "service_card": {
      "summary": "Example gateway with memory and mesh services"
    }
  },
  "services": {
    "memory": {
      "servers": [
        { "url": "http://localhost:3000/memory" }
      ],
      "service_card": {
        "summary": "Neo4j knowledge graph for persistent memory",
        "description": "Supports semantic search, text search, and direct Cypher queries."
      },
      "paths": {
        "/schema": {
          "get": {
            "operationId": "get_schema",
            "summary": "Get memory schema with vocabulary guidance",
            "parameters": [
              {
                "name": "include_statistics",
                "in": "query",
                "description": "Include node/relationship counts",
                "required": false,
                "schema": {
                  "type": "boolean",
                  "default": false
                }
              }
            ]
          }
        },
        "/semantic": {
          "post": {
            "operationId": "semantic_search",
            "summary": "Search memory using vector similarity",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "query": {
                        "type": "string",
                        "description": "Search query"
                      },
                      "limit": {
                        "type": "integer",
                        "default": 10
                      }
                    },
                    "required": ["query"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "mesh": {
      "servers": [
        { "url": "http://localhost:3000/mesh" }
      ],
      "service_card": {
        "summary": "AI-to-AI communication network",
        "description": "Enables AI agents to share thoughts, coordinate, and communicate across sessions."
      },
      "paths": {
        "/subscribe": {
          "post": {
            "operationId": "subscribe",
            "summary": "Join the mesh network",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "participantName": {
                        "type": "string",
                        "description": "Display name for this participant"
                      },
                      "capabilities": {
                        "type": "array",
                        "items": { "type": "string" },
                        "description": "List of capabilities"
                      }
                    },
                    "required": ["participantName"]
                  }
                }
              }
            }
          }
        },
        "/broadcast": {
          "post": {
            "operationId": "broadcast",
            "summary": "Send message to mesh network",
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "content": {
                        "type": "string",
                        "description": "Message content"
                      },
                      "to": {
                        "type": "string",
                        "description": "Target session ID or 'ALL'",
                        "default": "ALL"
                      },
                      "messageType": {
                        "type": "string",
                        "enum": ["thought_share", "query", "response", "acknowledgment", "system_notification"],
                        "default": "thought_share"
                      },
                      "priority": {
                        "type": "string",
                        "enum": ["low", "medium", "high", "urgent"],
                        "default": "medium"
                      }
                    },
                    "required": ["content"]
                  }
                }
              }
            }
          }
        },
        "/messages": {
          "get": {
            "operationId": "get_messages",
            "summary": "Retrieve messages from inbox",
            "parameters": [
              {
                "name": "limit",
                "in": "query",
                "schema": { "type": "integer", "default": 20 }
              },
              {
                "name": "unreadOnly",
                "in": "query",
                "schema": { "type": "boolean", "default": true }
              }
            ]
          }
        }
      }
    }
  }
}
