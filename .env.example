# nginx-mcp-gateway Environment Configuration
# Copy this to .env and fill in your values

# Memory backend authentication token (optional)
# Required if using the memory backend with authentication
MCP_MEMORY_AUTH_TOKEN=

# Neo4j connection (for backend-service.ts)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

# Embedding service (for semantic search)
EMBEDDING_SERVICE_URL=http://localhost:3007
EMBEDDING_SERVICE_AUTH_TOKEN=
